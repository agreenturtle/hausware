<p id="notice"><%= notice %></p>

<% content_for :page_title do %>
Reservations - 
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      <div class="pull-left">
        <%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, "/", class: "btn btn-default", title: "Back" %>
        &nbsp;
      </div>

      <div class="pull-right">
        <%= link_to "<span class=\"glyphicon glyphicon-plus-sign\" aria-hidden=\"true\"></span> New Reservation".html_safe, [:new, @space.location.org, @space.location, @space, :reservation], class: "btn btn-success" %>
      </div>
      Listing Reservations
    </h1>
  </div>

  <table class="table table-striped table-hover tablesorter" id="reservations-table">


    <thead>
      <tr>
    
        <th><span>Space</span></th>
        <th><span>User</span></th>
        <th><span>Confirmation Code</span></th>
        <th><span>Name</span></th>
        <th><span>Email</span></th>
        <th><span>Phone</span></th>
        <th><span>Zipcode</span></th>
        <th><span>Starts at</span></th>
        <th><span>Ends at</span></th>
        <th><span>Price</span></th>
        <th><span>Chargeid</span></th>
      
      </tr>
    </thead>

    <tbody>
      <% unless @reservations.any? %>
      <tr id="empty-table">
        <td class="bg-warning" colspan="10">No reservations created yet.</td>
      </tr>
      <% end %>
      <% @reservations.each do |reservation| %>
      <tr class="linked-row" data-href="<%= location_space_reservation_path(reservation.space.location, reservation.space, reservation) %>">
      
        <td><%= link_to reservation.space.name, [reservation.space.location, reservation.space, reservation] %></td>
        <td><%= link_to reservation.user.full_name, [reservation.space.location, reservation.space, reservation] %></td>
        <td><%= link_to reservation.confirmation, [reservation.space.location, reservation.space, reservation] %></td>
        <td><%= link_to reservation.name, [reservation.space.location, reservation.space, reservation] %></td>
        <td><%= link_to reservation.email, [reservation.space.location, reservation.space, reservation] %></td>
        <td><%= link_to reservation.phone, [reservation.space.location, reservation.space, reservation] %></td>
        <td><%= link_to reservation.zipcode, [reservation.space.location, reservation.space, reservation] %></td>
        <td><%= link_to reservation.starts_at, [reservation.space.location, reservation.space, reservation] %></td>
        <td><%= link_to reservation.ends_at, [reservation.space.location, reservation.space, reservation] %></td>
        <td><%= link_to number_to_currency(reservation.price_in_cents / 100.00), [reservation.space.location, reservation.space, reservation] %></td>
        <td><%= link_to reservation.chargeid, [reservation.space.location, reservation.space, reservation] %></td>
        
        
        
      </tr>
      <% end %>
    </tbody>
  </table>
</div>




