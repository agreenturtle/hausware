<% content_for :page_title do %>
setting Details - 
<% end %>
<div class="container">
<div class="page-header">
<h1>
<div class="pull-left">
<%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, admin_org_path(@setting.org), class: "btn btn-default", title: "Back to settings" %>
&nbsp;
</div>
<div class="pull-right">
<%= link_to "<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span> Edit".html_safe, edit_admin_org_setting_path(@setting.org, @setting), class: "btn btn-warning" %>
</div>
Settings
<small>
  <%= @setting.org.name%>
</small>
</h1>
</div>

<div class="row">
  <label class="col-sm-3 text-right text-muted">Default Location Spaces</label>
  <div class="col-sm-9"><%= @setting.default_location_spaces %></div>
</div>

<div class="row">
  <label class="col-sm-3 text-right text-muted">Stripe publishable key</label>
  <div class="col-sm-9"><%= @setting.stripe_publishable_key %></div>
</div>

<div class="row">
  <label class="col-sm-3 text-right text-muted">Stripe secret key</label>
  <div class="col-sm-9"><%= @setting.stripe_secret_key_encrypted.blank? ? '(not set)' : '[hidden]' %></div>
</div>

<div class="row">
  <label class="col-sm-3 text-right text-muted">Salt</label>
  <div class="col-sm-9"><%= @setting.salt %></div>
</div>

</div>

