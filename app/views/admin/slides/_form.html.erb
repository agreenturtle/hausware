<%= form_for([:admin, @space.location.org, @space.location, @space, @slide]) do |f| %>
<% if @slide.errors.any? %>
<div id="error_explanation" class="alert alert-danger" role="alert">
  <strong><%= pluralize(@slide.errors.count, "error") %> prohibited this slide from being saved:</strong>

  <ul>
    <% @slide.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="row">
  <div class="form-group<%= f.object.errors[:picture].empty? ? "" : " has-error has-feedback" %>">
    <%= f.label :picture, { class: "control-label col-sm-2" } %>
    <div class="col-sm-10">
      <%= f.file_field :picture, { class: "form-control" } %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-10">
    <br/>
    &nbsp;
    <%= f.check_box :set_as_cover %>
    <%= f.label :set_as_cover %>
    <br/>
    &nbsp;
  </div>
</div>
<div class="row">
  <div class="form-group<%= f.object.errors[:caption].empty? ? "" : " has-error has-feedback" %>">
    <%= f.label :caption, { class: "control-label col-sm-2" } %>
    <div class="col-sm-10">
      <%= f.text_field :caption, { class: "form-control" } %>
    </div>
  </div>
</div>

<div class="row">
  <div class="form-group<%= f.object.errors[:order].empty? ? "" : " has-error has-feedback" %>">
    <%= f.label :order, { class: "control-label col-sm-2" } %>
    <div class="col-sm-10">
      <%= f.number_field :order, { class: "form-control" } %>
    </div>
  </div>
</div>

<div class="actions text-center">
  <%= f.submit class: "btn btn-success" %>
</div>
<% end %>
