<% content_for :page_title do %>
slide Details - 
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      <div class="pull-left">
        <%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, [:admin, @space.location.org, @space.location, @space], class: "btn btn-default", title: "Back to space" %>
        &nbsp;
      </div>
      <div class="pull-right">
        <%= link_to "<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span> Edit".html_safe, [:edit, :admin, @space.location.org, @space.location, @space, @slide], class: "btn btn-warning" %>
      </div>
      Slide #<%= @slide.slideshowable.slides.index(@slide)+1 %>
      <small>
        <%= @space.name %>
      </small>
    </h1>
  </div>


  <div class="row">
    <label class="col-sm-3 text-right text-muted">Picture</label>
    <div class="col-sm-9"><%= image_tag @slide.picture.url %></div>
  </div>

  <div class="row">
    <label class="col-sm-3 text-right text-muted">Caption</label>
    <div class="col-sm-9"><%= @slide.caption %></div>
  </div>


  <div class="row">
    <label class="col-sm-3 text-right text-muted">Order</label>
    <div class="col-sm-9"><%= @slide.order %></div>
  </div>
</div>

