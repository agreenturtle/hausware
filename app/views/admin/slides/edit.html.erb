<% content_for :page_title do %>
Edit Slide - 
<% end %>
<div class="container">
<div class="page-header">
<h1>Editing Slide</h1>
</div>

<%= render 'form' %>

<div class="clearfix"></div>
<div class="pull-left">
<%= link_to "<span class=\"glyphicon glyphicon-ban-circle\" aria-hidden=\"true\"></span> Cancel".html_safe, @slide, class: "btn btn-default" %>
</div>
<div class="pull-right">
<%= link_to "<span class=\"glyphicon glyphicon-trash\" aria-hidden=\"true\"></span> Delete slide...".html_safe, @slide, method: :delete, data: { confirm: "Are you sure you want to delete this slide?" }, class: "btn btn-danger" %>
</div>
</div>
