<p id="notice"><%= notice %></p>

<% content_for :page_title do %>
Slides - 
<% end %>
<div class="container">
<div class="page-header">
<h1>
<div class="pull-left">
<%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, "/", class: "btn btn-default", title: "Back" %>
&nbsp;
</div>

<div class="pull-right">
<%= link_to "<span class=\"glyphicon glyphicon-plus-sign\" aria-hidden=\"true\"></span> New Slide".html_safe, [:new, :slide], class: "btn btn-success" %>
</div>
Listing Slides
</h1>
</div>

<table class="table table-striped table-hover tablesorter" id="Slides-table">


  <thead>
<tr>
    
      <th><span>Slideshowable</span></th>
      <th><span>Picture</span></th>
      <th><span>Order</span></th>
      <th><span>Caption</span></th>
      
    </tr>
  </thead>

  <tbody>
    <% unless @slides.any? %>
<tr id="empty-table">
<td class="bg-warning" colspan="2">No slides created yet.</td>
</tr>
<% end %>
<% @slides.each do |slide| %>
<tr class="linked-row" data-href="<%= slide_path(slide) %>">
      
        <td><%= link_to slide.slideshowable, slide %></td>
        <td><%= link_to slide.picture, slide %></td>
        <td><%= link_to slide.order, slide %></td>
        <td><%= link_to slide.caption, slide %></td>
        
        
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>




